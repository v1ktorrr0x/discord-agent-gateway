# =============================================================================
# Discord AI Bot Handler - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./discord_agents.db
# For PostgreSQL: postgresql://user:password@localhost:5432/discord_agents
# For MySQL: mysql://user:password@localhost:3306/discord_agents

# -----------------------------------------------------------------------------
# Discord Bot Configuration
# -----------------------------------------------------------------------------
DISCORD_NEW_AGENT_POLL_INTERVAL=10  # Seconds between database polls
DISCORD_MAX_MESSAGE_LENGTH=2000     # Discord's character limit

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=text                     # text or json
LOG_FILE=logs/discord_bot.log
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development             # development, staging, production
DEBUG=false

# -----------------------------------------------------------------------------
# AI Agent Configuration (Required for LLM agents)
# -----------------------------------------------------------------------------
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/

OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_BOTS=50              # Maximum number of bot instances
SHUTDOWN_TIMEOUT=30                 # Seconds to wait for graceful shutdown
